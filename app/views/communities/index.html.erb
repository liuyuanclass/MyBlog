<p id="notice"><%= notice %></p>

<h1>社团</h1>
<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand">社团查找</a>
  <%= form_tag controller: "communities", action: "search", method: "post" do %>
    <%= label_tag(:id, "搜索:") %>
    <%= text_field_tag :id %>
    <%= submit_tag("确定") %>
  <% end %>
</nav>
<table  class="table table-hover">
  <thead>
    <tr>
      <th>社团名</th>
      <th>社长ID</th>
      <th>详情</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.community_id %></td>
        <td><%= community.leader %></td>
        <td><%= community.describe %></td>
        <td><%= link_to '社团详情', community %></td>
        <td><%= link_to "加入社团",add_organize_path(current_user,community) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '我要创建社团', new_community_path %>
<%= link_to '返回',root_path %>