<p id="notice"><%= notice %></p>
<h1>欢迎<%=@student.name %>同学</h1>


<%= form_tag controller: "schedules", action: "search", method: "post" do %>
  <%= label_tag(:tid, "搜索:") %>
  <%= text_field_tag :tid %>
  <%= submit_tag("确定") %>
<% end %>


<table  class="table table-hover">
  <thead>
  <tr>
    <th>教师ID</th>
    <th>课程ID</th>
    <th>课程名</th>
    <th>教学教室</th>
    <th>上课时间</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @teach_classes.each do |teach_class| %>
    <tr>
      <td><%= teach_class.teacher_id %></td>
      <td><%= teach_class.course_id %></td>
      <td><%= teach_class.name %></td>
      <td><%= teach_class.classroom_id %></td>
      <td><%= teach_class.class_time %></td>
      <td><%= link_to '查看', teach_class %></td>
      <td><%= link_to '选课', add_course_path(current_user,tid:teach_class.id) %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<br>


<%= link_to '返回',root_path %>