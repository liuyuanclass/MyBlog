<p id="notice"><%= notice %></p>

<h1>已选课程</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>学号</th>
      <th>课程号</th>
      <th>课程名</th>
      <th>上课时间</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.student_id %></td>
        <td><%= schedule.teachclass_id %></td>
        <td><%= schedule.name %></td>
        <td><%= schedule.class_time %></td>

        <td><%= link_to '详情', schedule %></td>
        <td><%= link_to '退选', schedule, method: :delete, data: { confirm: '确认退选吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '开始选课', selection_path(current_user)%>
<%= link_to '返回',root_path %>
