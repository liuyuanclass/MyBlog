<h1>我管理的社团</h1>

<table>
  <thead>
  <tr>
    <th>社团名</th>
    <th>社长ID</th>
    <th>详情</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @communities.each do |community| %>
    <tr>
      <td><%= community.community_id %></td>
      <td><%= community.leader %></td>
      <td><%= community.describe %></td>
      <td><%= link_to '社团详情', community %></td>
      <td><%= link_to '编辑社团', edit_community_path(community) %></td>
      <td><%= link_to '解散社团', delete_community_path(community), data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

