<p id="notice"><%= notice %></p>

<h1>教师管理</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>教师号</th>
      <th>姓名</th>
      <th>性别</th>
      <th>办公地点</th>
      <th>联系电话</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.teacher_id %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.sex %></td>
        <td><%= teacher.adress %></td>
        <td><%= teacher.phone %></td>
        <td><%= link_to '详情', teacher %></td>
        <td><%= link_to '修改', edit_teacher_path(teacher) %></td>
        <td><%= link_to '删除', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

