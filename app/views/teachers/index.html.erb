<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Name</th>
      <th>Role</th>
      <th>Sex</th>
      <th>Adress</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.teacher_id %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.role %></td>
        <td><%= teacher.sex %></td>
        <td><%= teacher.adress %></td>
        <td><%= teacher.phone %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

