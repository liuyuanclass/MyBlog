<p id="notice"><%= notice %></p>
<p>
  <strong>授课老师:</strong>
  <%=link_to @teacher.name,teacher_path(@teacher) %>
</p>

<table  class="table table-hover">
  <thead>
  <tr>
    <th>学号</th>
    <th>姓名</th>
    <th>班级</th>
    <th>性别</th>
    <th>电话</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.name %></td>
      <td><%=student.class_id %></td>
      <td><%= student.sex %></td>
      <td><%= student.phone %></td>
      <td><%= link_to '详情', student %></td>
      <td><%= link_to '修改', edit_student_path(student) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

