<p id="notice"><%= notice %></p>

<h1>院系管理</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>院系名称</th>
      <th>简述</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.depart_id %></td>
        <td><%= department.describe %></td>
        <td><%= link_to '详情', read_department_path(department) %></td>
        <td><%= link_to '修改', edit_department_path(department) %></td>
        <td><%= link_to '删除', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建院系', new_department_path %>
