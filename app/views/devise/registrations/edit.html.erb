<h2>更改<%= resource_name.to_s.humanize %></h2>
<div style="margin-left: 35px">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p>邮箱</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <p>用户ID</p>
    <%= f.text_field :user_id, required: true, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(空白则不为您更新密码)</i><br />
    <%= f.password_field :password, autocomplete: "新密码" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "新密码" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(我们需要验证您的旧密码)</i><br />
    <%= f.password_field :current_password, autocomplete: "验证旧密码" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "更新密码" %>
  </div>
<% end %>

<h3>删除我的账号</h3>

<p>不爽? <%= button_to "关闭我的账号", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "返回", :back %>
</div>